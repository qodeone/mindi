<div class="bc-widewhite uk-section bc-section">
  <div class="uk-container">
    <div class="uk-grid-match" uk-height-match="{target:'.tall'}" uk-grid>
      <div class="uk-width-1-3@m">
        <div class="uk-card uk-card-default box1 tall uk-text-center">
          <div class="uk-card-media-top">{{ content.field_panel_image }}</div>

          <div class="bc-botblock uk-card-body">
            {{ content.field_panel_content }}
          </div>
        </div>
      </div>

      <div class="uk-width-1-3@m">
        <div class="uk-card uk-card-default box2 tall uk-text-center">
          <div class="uk-card-media-top">{{ content.field_panel_2_image }}</div>

          <div class="bc-botblock uk-card-body">
            {{ content.field_panel_2_content }}
          </div>
        </div>
      </div>

      <div class="uk-width-1-3@m">
        <div class="bc-gridcollapseright uk-grid-match" uk-grid>
          <div class="uk-width-1-1 uk-height-1-2">
            <div class="uk-card uk-card-default uk-height-1-1 box3 uk-text-center">
              <div class="uk-card-body">
                {{ content.field_panel_3_content }}
              </div>
            </div>
          </div>

          <div class="uk-width-1-1 uk-height-1-2">
            <div class="uk-card uk-card-default uk-height-1-1 box4 uk-text-center">
              <div class="uk-card-body">
                {{ content.field_panel_4_content }}
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- end section -->
